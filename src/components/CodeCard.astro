---
export interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
	external: string;
}

const { title, body, image, external } = Astro.props;
---

<div class="card">
	<div class="header">
		<h1>
			{external && <a href={external}>{title}</a>}
		</h1>
	</div>
	<div class="body">
		<p>
			{body}
		</p>
		<slot />
		{
			image && (
				<a href={`${image}`}>
					<img src={image} alt={title} />
				</a>
			)
		}
	</div>
	<style>
		.card {
			margin: auto;
			/* width: 300px; */
			margin-bottom: 1rem;
			background-color: #f8f9fa38;
			border-radius: 0.3rem;
			opacity: 0.9;
		}

		.header {
			height: auto;
			text-align: center;
			font-family: "Beth Ellen";
			margin: 0;
			/* border-bottom: 2px solid #000; */
			margin-bottom: 1rem;
			color: #f8f9fa;
		}

		.body {
			padding: 0 1rem;
			background-color: #f8f9fa46;
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		img {
			width: 100%;
			height: auto;
			margin: auto;
			margin-top: 1rem;
			margin-bottom: 1rem;
			border: 1px solid #000;
			border-radius: 0.3rem;
		}

		p {
			text-align: center;
			font-weight: 200;
			font-size: 1.4rem;

			display: inline-block;
			text-align: left;
			padding: 1rem;
			margin: auto auto;
		}

		a {
			color: inherit;
			text-decoration: none;
			cursor: pointer;
		}

		h1:hover {
			color: black;
			text-decoration: none;
		}
	</style>
</div>
