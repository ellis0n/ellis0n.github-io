---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="ellison glen may">
	<main>
		<header><h1>ellison glen may</h1></header>
		<!-- <nav>
			<a href="/me">about</a>
			<a href="/#">work</a>
			<a href="/#">contact</a>
		</nav> -->
		<div class="glen">
			<h2>Hey, I'm <span id="click-name">Glen</span>.</h2>
		</div>
		<div class="intro">
			<p>I'm a</p>
			<select>
				<option>software developer</option>
				<option>father</option>
				<option>musician</option>
				<option>creative</option>
			</select>
			<p class="right-align">living in St. John's, Newfoundland.</p>
		</div>
		<p></p>
	</main>
	<!-- <Card href="/#" title="Glen" body="May" /> -->
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}

	header {
		margin-bottom: 1rem;
	}

	nav {
		display: flex;
		justify-content: space-evenly;
		margin-bottom: 1rem;
		color: #f8f9fa;
		text-decoration: none;
	}
	a {
		text-decoration: none;
		color: #fff;
	}

	a:hover {
		color: red;
	}

	h1 {
		text-align: center;
		font-family: "Beth Ellen";
		font-size: 3rem;
		margin: 0;
		/* border-bottom: 2px solid #000; */
		margin-bottom: 1rem;
		color: #f8f9fa;
	}

	h2 {
		font-family: "Inter Tight";
		font-weight: 200;
		font-weight: 800;
		color: #f8f9fa;
	}

	select {
		background-color: inherit;
		color: #f8f9fa;
		border: none;
		font-family: "Inter Tight";
		font-weight: 800;
		font-size: 1.5rem;
		appearance: none;
		width: 100%;
	}

	select:hover {
		background-color: #f8f9fa38;
	}

	option {
		color: black;
		background-color: #f8f9fa;
		text-align: center;
	}

	option:hover {
		color: red;
	}

	.glen {
		display: flex;
		justify-content: left;
	}

	.intro {
		border: 2px solid #f8f9fa4f;
	}

	.intro p {
		color: #f8f9fa;
	}

	#click-name:hover {
		color: red;
		cursor: pointer;
	}

	.right-align {
		text-align: right;
	}
</style>
